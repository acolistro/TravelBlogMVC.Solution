@{
  Layout = "_Layout";
}
@using TravelBlogMVC.Models;
@model TravelBlogMVC.Models.Destination;

<h2>Destination Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Location): @Html.DisplayFor(model => model.Location)</h3>

@if(@Model.Reviews.Count == 0)
{
  <p>This destination doesn't have any reviews yet!</p>
}
else
{
  <h4>Reviews:</h4>
  <ul>
  @foreach(Review review in Model.Reviews)
  {
    <li>Review: @review.Title</li>
  }
  </ul>
}

<p>@Html.ActionLink("Back to reviews", "Index")</p>
<p>@Html.ActionLink("Edit Destination", "Edit", new { id = Model.DestinationId })</p>
<p>@Html.ActionLink("Delete Destination", "Delete", new { id = Model.DestinationId })</p>